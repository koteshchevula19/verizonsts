package com.springbootmobilerecharge.entities;

import java.time.LocalDateTime;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.ManyToOne;

@Entity
public class Recharge {

	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	private Integer rechargeId;
	
	private LocalDateTime recargeDateTime;
	
	private Double rechargeAmount;
	
	private Long rechargeMobile;
	
	@ManyToOne
	private Customer customer;

	

	public Recharge(Integer rechargeId, Double rechargeAmount, Long mobile) {
		super();
		this.rechargeId = rechargeId;
		this.rechargeAmount = rechargeAmount;
		this.customer = new Customer(mobile);
	}
	public Recharge() {
		// TODO Auto-generated constructor stub
	}
	
}
