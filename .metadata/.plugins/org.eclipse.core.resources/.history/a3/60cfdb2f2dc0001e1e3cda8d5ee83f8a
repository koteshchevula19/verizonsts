package com.waleed.verizon.training;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.client.RestClientException;
import org.springframework.web.client.RestTemplate;

import java.util.Arrays;
import java.util.List;
import java.util.Optional;

@Service
public class BookService {

    @Autowired
    RestTemplate restTemplate;

    List<Book> listOfBooks = Arrays.asList(
        new Book(101, "Rich Dad Poor Dad", "self-gelf", "A Book about managing money"),
        new Book(102, "The power of subconcious mind", "self-helf", "Building confidence and growing our mindset"),
        new Book(212, "The secret the power", "self-help", "About the universal law of attraction"),
        new Book(104, "Alchemist", "self-help", "Find our own desires")
    );

    List<Book> getAllBooks(){
        return listOfBooks;
    }

    Book getBookById(@PathVariable Integer id){
        return new Book(102, "The power of subconcious mind", "self-helf", "Building confidence and growing our mindset");
    }

    List<Object> getAllUsers(){
      //But it isn't here...Lets get it from the other service:

        String urlOfOtherService = "http://localhost:8084/api/v1/users";
        try {
        Object[] returnedData = restTemplate.getForObject(urlOfOtherService, Object[].class);

        return Arrays.asList(returnedData);
        }
        catch (RestClientException e) {
            // Handle exception or log an error
            return List<Optional.empty()>;
        }
        
    }
    
    public String postUsers(Object obj) {
    	String urlOfOtherServie="http://localhost:8084/api/v1/users";
    	 try {
             return restTemplate.postForObject(urlOfOtherServie, obj, String.class);
         } catch (RestClientException e) {
             // Handle exception or log an error
             return "Error posting user data";
         }
    	
    }


}
